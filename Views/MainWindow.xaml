<!-- MainWindow.xaml -->
<Window x:Class="Volunteers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Border BorderBrush="#A8D5BA" BorderThickness="2" CornerRadius="10" Padding="20" Background="White">
            <StackPanel>
                <Label Content="Логин:"/>
                <TextBox x:Name="LoginTextBox" />
                

                <Label Content="Пароль:" Margin="0,10,0,0"/>
                <PasswordBox x:Name="PasswordBox" />

                <Button Content="Войти" Click="LoginButton_Click" 
                        Margin="0,20,0,0" 
                        Height="30" />
                        
            </StackPanel>
        </Border>
    </Grid>
</Window>
