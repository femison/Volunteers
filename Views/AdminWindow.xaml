<Window x:Class="Volunteers.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель Администратора" Height="1030" Width="1600"
        WindowStartupLocation="CenterScreen"
        Activated="Window_Activated"
        WindowState="Maximized"
        Closed="Window_Closed"
        Background="#F5F7FA"
        Language="ru-RU">


    <Window.Resources>
        <!-- Стиль для TextBlock в DataGrid -->
        <Style x:Key="DataGridTextBlockStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="ToolTip" Value="{Binding Path=Text, RelativeSource={RelativeSource Self}}"/>
        </Style>

        <!-- Стиль для вкладок -->
        <Style TargetType="TabItem" x:Key="TabItemStyle">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0,0,0,2"
                                Margin="2">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3498DB"/>
                                <Setter Property="Foreground" Value="#3498DB"/>
                                <Setter Property="FontWeight" Value="Normal"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#ECF0F1"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#2C3E50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Базовый стиль для кнопок -->
        <Style TargetType="Button" x:Key="BaseButtonStyle">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="5"/>
           
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1F618D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Foreground" Value="#7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для Primary кнопок -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#3498DB"/>
        </Style>

        <!-- Стиль для Secondary кнопок -->
        <Style TargetType="Button" x:Key="SecondaryButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#2ECC71"/>
        </Style>

        <!-- Стиль для Danger кнопок -->
        <Style TargetType="Button" x:Key="DangerButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>

        <!-- Стиль для Search кнопок -->
        <Style TargetType="Button" x:Key="SearchButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#7F8C8D"/>
        </Style>

        <!-- Стиль для заголовков DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#2C3E50"
                                BorderThickness="0,0,1,1">
                            <ContentPresenter VerticalAlignment="Center" Margin="12,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для строк DataGrid -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3498DB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ECF0F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для ячеек DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0,0,1,1"
                                Padding="0,0">
                            <ContentPresenter VerticalAlignment="Stretch"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3498DB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для заголовка окна -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,20,0,30"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox" x:Key="SearchTextBoxStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Шаблоны для кнопок действий -->
        <DataTemplate x:Key="UserActionButtonsTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button ToolTip="Редактировать" 
                        Click="EditUserButton_Click" 
                        Tag="{Binding UserID}" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Width="36" Height="36" 
                        Padding="8" 
                        Margin="4"
                        Content="✏️"/>
                <Button ToolTip="Удалить" 
                        Click="DeleteUserButton_Click" 
                        Tag="{Binding UserID}" 
                        Style="{StaticResource DangerButtonStyle}" 
                        Width="36" Height="36" 
                        Padding="8" 
                        Margin="4"
                        Content="🗑️"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ProjectActionButtonsTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button ToolTip="Редактировать" 
                        Click="EditProjectButton_Click" 
                        Tag="{Binding ProjectID}" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Width="36" Height="36" 
                        Padding="8" 
                        Margin="4"
                        Content="✏️"/>
                <Button ToolTip="Удалить" 
                        Click="DeleteProjectButton_Click" 
                        Tag="{Binding ProjectID}" 
                        Style="{StaticResource DangerButtonStyle}" 
                        Width="36" Height="36" 
                        Padding="8" 
                        Margin="4"
                        Content="🗑️"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="TaskActionButtonsTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button ToolTip="Редактировать" 
                        Click="EditTaskButton_Click" 
                        Tag="{Binding TaskID}" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Width="36" Height="36" 
                        Padding="8" 
                        Margin="4"
                        Content="✏️"/>
                <Button ToolTip="Удалить" 
                        Click="DeleteTaskButton_Click" 
                        Tag="{Binding TaskID}" 
                        Style="{StaticResource DangerButtonStyle}" 
                        Width="36" Height="36" 
                        Padding="8" 
                        Margin="4"
                        Content="🗑️"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="RequestActionButtonsTemplate">
            <StackPanel Orientation="Horizontal" x:Name="ActionButtonsPanel">
                <Button Content="✔️" 
                    Style="{StaticResource SecondaryButtonStyle}" 
                    Tag="{Binding RequestID}" 
                    Click="ApproveRequestButton_Click" 
                    Margin="0,0,5,0" 
                    ToolTip="Одобрить заявку"/>
                <Button Content="❌" 
                    Style="{StaticResource DangerButtonStyle}" 
                    Tag="{Binding RequestID}" 
                    Click="RejectRequestButton_Click" 
                    ToolTip="Отклонить заявку"/>
            </StackPanel>
            <DataTemplate.Triggers>
                <!-- Скрыть кнопки для статусов "Одобрена" и "Отклонена" -->
                <DataTrigger Binding="{Binding Status}" Value="Одобрена">
                    <Setter TargetName="ActionButtonsPanel" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Отклонена">
                    <Setter TargetName="ActionButtonsPanel" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="20,20,20,0">
        <Grid Margin="20,-20,20,8">
            <!-- Заголовок окна -->
            <TextBlock Text="Панель Администратора" 
                       Style="{StaticResource HeaderTextStyle}"/>

            <!-- Табличные данные и кнопки -->
            <TabControl Margin="0,80,0,0" Background="Transparent" BorderThickness="0">
                <!-- Вкладка "Пользователи" -->
                <TabItem Header="Пользователи" Style="{StaticResource TabItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>

                        </Grid.RowDefinitions>

                        <!-- Панель поиска пользователей -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,0,20">
                            <TextBox x:Name="UserSearchTextBox" Width="320" Height="56" 
                                     Style="{StaticResource SearchTextBoxStyle}"
                                     KeyDown="UserSearchTextBox_KeyDown"/>
                            <Button Content="Поиск" 
                                    Width="120" 
                                    Height="56"
                                    Style="{StaticResource SearchButtonStyle}"
                                    Click="UserSearchButton_Click"/>
                            <Button Content="Сбросить" 
                                    Width="120" 
                                    Height="56"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="UserResetButton_Click"/>
                        </StackPanel>

                        <!-- DataGrid для отображения пользователей -->
                        <DataGrid x:Name="UsersDataGrid" 
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  RowStyle="{StaticResource DataGridRowStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  SelectionMode="Single"
                                  AlternatingRowBackground="#F9FAFB"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"
                                  GridLinesVisibility="None">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding UserID}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Навыки" Binding="{Binding UserSkills}" Width="2*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Дата рождения" 
                            Binding="{Binding DateOfBirth, StringFormat=d MMMM yyyy}" 
                            Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Пол" Binding="{Binding Gender}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="2*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Действия" Width="200" 
                                                       CellTemplate="{StaticResource UserActionButtonsTemplate}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Кнопка "Добавить пользователя" -->
                        <Button Content="Добавить пользователя"
                                Click="AddUserButton_Click"
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="14,721,1300,20" Grid.Row="1"/>
                    </Grid>
                </TabItem>

                <!-- Вкладка "Проекты" -->
                <TabItem Header="Проекты" Style="{StaticResource TabItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Панель поиска проектов -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,0,20">
                            <TextBox x:Name="ProjectSearchTextBox" Width="320" Height="56"
                                     Style="{StaticResource SearchTextBoxStyle}"
                                     KeyDown="ProjectSearchTextBox_KeyDown"/>
                            <Button Content="Поиск" 
                                    Width="120" 
                                    Height="56"
                                    Style="{StaticResource SearchButtonStyle}"
                                    Click="ProjectSearchButton_Click"/>
                            <Button Content="Сбросить" 
                                    Width="120" 
                                    Height="56"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="ProjectResetButton_Click"/>
                        </StackPanel>

                        <!-- DataGrid для отображения проектов -->
                        <DataGrid x:Name="ProjectsDataGrid" 
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  RowStyle="{StaticResource DataGridRowStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  SelectionMode="Single"
                                  AlternatingRowBackground="#F9FAFB"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"
                                  GridLinesVisibility="None">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ProjectID}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Название" Binding="{Binding ProjectName}" Width="2*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Дата начала" 
                    Binding="{Binding StartDate, StringFormat=d MMMM yyyy}" 
                    Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Дата окончания" 
                    Binding="{Binding EndDate, StringFormat=d MMMM yyyy}" 
                    Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Действия" Width="200" 
                                                       CellTemplate="{StaticResource ProjectActionButtonsTemplate}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Кнопка "Добавить проект" -->
                        <Button Content="Добавить проект"
                                Click="AddProjectButton_Click"
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="14,25,1298,20" Grid.Row="2"/>
                    </Grid>
                </TabItem>

                <!-- Вкладка "Задачи" -->
                <TabItem Header="Задачи" Style="{StaticResource TabItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Панель поиска задач -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,0,20">
                            <TextBox x:Name="TaskSearchTextBox" Width="320" Height="56"
                                     Style="{StaticResource SearchTextBoxStyle}"
                                     KeyDown="TaskSearchTextBox_KeyDown"/>
                            <Button Content="Поиск" 
                                    Width="120" 
                                    Height="56"
                                    Style="{StaticResource SearchButtonStyle}"
                                    Click="TaskSearchButton_Click"/>
                            <Button Content="Сбросить" 
                                    Width="120" 
                                    Height="56"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="TaskResetButton_Click"/>
                        </StackPanel>

                        <!-- DataGrid для отображения задач -->
                        <DataGrid x:Name="TasksDataGrid" 
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  RowStyle="{StaticResource DataGridRowStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  SelectionMode="Single"
                                  AlternatingRowBackground="#F9FAFB"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"
                                  GridLinesVisibility="None"
                                  Margin="0,0,0,46">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding TaskID}" Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Проект" Binding="{Binding ProjectName}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Местоположение" Binding="{Binding Location}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Дата" 
                    Binding="{Binding Date, StringFormat=d MMMM yyyy}" 
                    Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Действия" Width="200" 
                                                       CellTemplate="{StaticResource TaskActionButtonsTemplate}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Кнопка "Добавить задачу" -->
                        <Button Content="Добавить задачу"
                                Click="AddTaskButton_Click"
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="16,739,1298,8" Grid.Row="1"/>
                    </Grid>
                </TabItem>

                <!-- Вкладка "Назначение задач" -->
                <TabItem Header="Назначение задач" Style="{StaticResource TabItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Панель поиска задач -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,0,20">
                            <TextBox x:Name="UserTaskSearchTextBox" Width="320" Height="56"
                                     Style="{StaticResource SearchTextBoxStyle}"
                                     KeyDown="UserTaskSearchTextBox_KeyDown"/>
                            <Button Content="Поиск" 
                                    Width="120" 
                                    Height="56"
                                    Style="{StaticResource SearchButtonStyle}"
                                    Click="UserTaskSearchButton_Click"/>
                            <Button Content="Сбросить" 
                                    Width="120" 
                                    Height="56"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="UserTaskResetButton_Click"/>
                        </StackPanel>

                        <!-- DataGrid для отображения задач -->
                        <DataGrid x:Name="UserTasksDataGrid" 
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  RowStyle="{StaticResource DataGridRowStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  SelectionMode="Single"
                                  AlternatingRowBackground="#F9FAFB"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"
                                  GridLinesVisibility="None"
                                  Margin="0,0,0,20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Имя пользователя" Binding="{Binding FullName}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Описание задачи" Binding="{Binding Description}" Width="2*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Проект" Binding="{Binding ProjectName}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Кнопка "Добавить участие" -->
                        <Button Content="Добавить участие"
                                Click="AddParticipationButton_Click"
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="14,25,1300,20" Grid.Row="2"/>
                    </Grid>
                </TabItem>

                <!-- Вкладка "Учетные записи" -->
                <TabItem Header="Учетные записи" Style="{StaticResource TabItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Панель поиска -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,0,20">
                            <TextBox x:Name="AccountSearchTextBox" Width="320" Height="56"
                                     Style="{StaticResource SearchTextBoxStyle}"
                                     KeyDown="AccountSearchTextBox_KeyDown"/>
                            <Button Content="Поиск"
                                    Width="120"
                                    Height="56"
                                    Style="{StaticResource SearchButtonStyle}"
                                    Click="AccountSearchButton_Click"/>
                            <Button Content="Сбросить"
                                    Width="120"
                                    Height="56"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="AccountResetButton_Click"/>
                        </StackPanel>

                        <!-- DataGrid -->
                        <DataGrid x:Name="AccountsDataGrid" 
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  RowStyle="{StaticResource DataGridRowStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  SelectionMode="Single"
                                  AlternatingRowBackground="#F9FAFB"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"
                                  GridLinesVisibility="None">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Пароль" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayPassword}" 
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"/>
                                                <Button Content="👁️" 
                                                        Style="{StaticResource BaseButtonStyle}"
                                                        Click="TogglePasswordVisibility_Click"
                                                        CommandParameter="{Binding}"
                                                        Width="36"
                                                        Height="36"
                                                        Padding="8"
                                                        Margin="10,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Действия" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Редактировать"
                                                    Click="EditAccountButton_Click"
                                                    Tag="{Binding UserID}"
                                                    Style="{StaticResource BaseButtonStyle}"
                                                    Width="120"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- Вкладка "Заявки" -->
                <TabItem Header="Заявки" Style="{StaticResource TabItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Панель поиска заявок -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,0,20">
                            <TextBox x:Name="SearchRequestBox" Width="320" Height="56"
                                     Style="{StaticResource SearchTextBoxStyle}"
                                     KeyDown="SearchRequestBox_KeyDown"/>
                            <Button Content="Поиск"
                                    Width="120"
                                    Height="56"
                                    Style="{StaticResource SearchButtonStyle}"
                                    Click="SearchRequestButton_Click"/>
                            <Button Content="Сбросить"
                                    Width="120"
                                    Height="56"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="ResetRequestButton_Click"/>
                        </StackPanel>

                        <!-- DataGrid для отображения заявок -->
                        <DataGrid x:Name="RequestsDataGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                  RowStyle="{StaticResource DataGridRowStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  SelectionMode="Single"
                                  AlternatingRowBackground="#F9FAFB"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"
                                  GridLinesVisibility="None"
                                  Margin="0,0,0,20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Дата рождения" 
                            Binding="{Binding DateOfBirth, StringFormat=d MMMM yyyy}" 
                            Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Проект" Binding="{Binding ProjectName}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Описание задачи" Binding="{Binding TaskDescription}" Width="2*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Статус заявки" Binding="{Binding Status}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextBlockStyle}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Действия" Width="200" 
                                                       CellTemplate="{StaticResource RequestActionButtonsTemplate}"/>
                            </DataGrid.Columns>
                        </DataGrid>


                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
